@model UserSystemProject.Models.Account.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="container" style="margin-top:100px">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Kayıt Ol</div>
                    <div class="card-body">
                        @if (TempData["message"] != null)
                        {
                            <div class="alert alert-info" style="text-align:center">
                                @TempData["message"]
                            </div>
                        }
                        <form asp-controller="Account" asp-action="Register">
                            <div class="form-group row">
                                <label for="full_name" class="col-md-4 col-form-label text-md-right">Adınız</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="FirstName" class="form-control" placeholder="Adınız.." autocomplete="off">
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">Soyadınız</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="LastName" class="form-control" placeholder="Soyadınız.." autocomplete="off">
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>

                            </div>

                            <div class="form-group row">
                                <label for="user_name" class="col-md-4 col-form-label text-md-right">Kullanıcı Adı</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı adınız.." autocomplete="off">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="phone_number" class="col-md-4 col-form-label text-md-right">Mail adresiniz</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="Email" class="form-control" placeholder="örnek@örnek.com" autocomplete="off">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="present_address" class="col-md-4 col-form-label text-md-right">Şifreniz </label>
                                <div class="col-md-6">
                                    <input type="password" asp-for="Password" class="form-control" autocomplete="off" placeholder="Şifreniz">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="permanent_address" class="col-md-4 col-form-label text-md-right">Şifre Tekrar</label>
                                <div class="col-md-6">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" autocomplete="off" placeholder="Tekrar Şifreniz">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Kayıt Ol
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
