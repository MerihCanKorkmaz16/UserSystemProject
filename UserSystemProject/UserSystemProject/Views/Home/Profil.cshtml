@model UserSystemProject.Models.Account.UserDetailsViewModel
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container" style="margin-top:50px">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" style="text-align:center"><i class="fa fa-cogs" aria-hidden="true"></i> Profil Ayarlarım</div>
                <div class="card-body">
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-info" style="text-align:center">
                            @TempData["message"]
                        </div>
                    }
                    <form asp-controller="Home" asp-action="Profil">
                        <div class="form-group row">
                            <label for="full_name" class="col-md-4 col-form-label text-md-right">Adınız</label>
                            <div class="col-md-6">
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="Adınız.." autocomplete="off">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="email_address" class="col-md-4 col-form-label text-md-right">Soyadınız</label>
                            <div class="col-md-6">
                                <input type="text" asp-for="LastName" class="form-control" placeholder="Soyadınız.." autocomplete="off">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                        </div>

                        <div class="form-group row">
                            <label for="user_name" class="col-md-4 col-form-label text-md-right">Emailiniz</label>
                            <div class="col-md-6">
                                <input type="text" asp-for="Email" class="form-control" placeholder="E mail adresiniz" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>

                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Bilgilerimi Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


