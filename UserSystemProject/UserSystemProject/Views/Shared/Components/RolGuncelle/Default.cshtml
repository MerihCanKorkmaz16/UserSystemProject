@model UserSystemProject.Models.Admin.UserRoleViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="card border-info">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4 style="text-align:center">Rol Güncelle</h4>
                    <hr>
                </div>
            </div>
            <div class="row" style="margin-left:0px;margin-right:0px;">
                <div class="col-md-12">
                    <form asp-controller="Admin" asp-action="KullaniciRolGüncelle" method="post">
                        <div class="form-group row">
                            <label class="col-md-4  text-md-right">Güncellenicek Rol ismi :</label>
                            <div class="col-md-6">
                                <input type="hidden" asp-for="RolId" />
                                <input asp-for="Name" type="text" class="form-control" placeholder="Örnek:Kullanıcı." autocomplete="off" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group" style="text-align:center">
                            <input type="submit" value="Rol Güncelle" class="btn  btn-outline-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
